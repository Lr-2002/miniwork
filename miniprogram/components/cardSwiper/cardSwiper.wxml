<view class="card-swiper">
    <view wx:for="{{swiperData}}" data-index="{{index}}"
        class="{{'card-swiper-item curdistance' + (swiperCurIndex + index) +  (!!item.slideClass? item.slideClass: '')}}"
        bindtap="next" catchtouchstart="touchCard.start" catchtouchmove="touchCard.move" wx:key="i"
        catchtouchend="touchCard.end" catchtouchcancel="touchCard.cancel">
        <view>
            <view class="swiper_img">
                <image src="{{item.img}}"> </image>
            </view>
            <view class="swiper_tille">{{item.tille}}</view>
            <view class="swiper_time">{{item.time}}</view>
            <view class="swiper_html">{{item.html}}</view>
        </view>



    </view>
</view>