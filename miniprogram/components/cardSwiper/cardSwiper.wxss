/**index.wxss**/
.card-swiper{
  position: relative;
  width: calc(100% - 40rpx);
  height: 90vh;
  color: #666;
  font-size: 28rpx;
  margin: 0 auto;
}
.swiper_img{
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.swiper_tille{
background: linear-gradient(to top right, #f4c998 , #d69c63);
color:#fff;
margin-top: -10px;
font-size: 22px;
padding: 4px 8px;
position: relative;
display: inline-block;
border-radius: 0px 2px 2px 0px;
}
.swiper_html{
margin-top: 10px;
line-height: 27px;
padding: 10px;
height: 100px;
overflow-y: scroll;
}
.swiper_time{
float:right;
color:#fff;
padding: 4px 2px;
margin-top: 10px;
background: linear-gradient(to top , #393f47 , #1d1f24 );
}
.card-swiper-item{
  display: flex;
overflow: hidden;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 90vh;
  border-radius: 26rpx;
  background-color: #fff;
  transition: all .3s ease-out;
  z-index: 0;
  display: none;
}

.card-swiper .card-swiper-item.curdistance0{
  z-index: 10;
  display: flex;
}

.card-swiper .card-swiper-item.curdistance1{
  display: flex;
  z-index: 9;
  transform: scale(.95);
  opacity: .7;
  top: -50rpx;
}
.card-swiper .card-swiper-item.curdistance2{
  display: flex;
  z-index: 8;
  transform: scale(.9);
  opacity: .4;
  top: -90rpx;
}

.ani-slide-up{
  display: flex;
  animation: slideUp .6s ease-out;
  z-index: 11;
  /* transform: rotate(25deg); */
}

.ani-slide-down{
  display: flex;
  animation: slideUp .6s ease-in;
  animation-direction: reverse;
}


@keyframes slideUp{
  0% {
  }
  70% {
    opacity: 1;
  }
  100% {
    transform: rotate(15deg) translateY(-1000rpx);
    opacity: 0;
  }
}
