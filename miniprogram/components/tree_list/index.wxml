<view class="cu-card article " wx:if="{{!loding}}" wx:for="{{list}}" wx:key="this" wx:index="index" wx:for-item="items"
  data-id="{{items._id}}" bindtap="tz" data-url="work/details_work/index" hover-class="item-hover"
  hover-stay-time="100">
  <view class="cu-item shadow ">
    <view class="title">
    {{items.tille}} 
    <view class="cu-tag bg-red light sm radius"> 秋招</view>
    <view class="cu-tag bg-green light sm radius">内推</view>
      <!-- <view class="text-cut"></view> -->
    </view>
    <view class="content">
      <image src="{{items.img}}" mode="aspectFill"></image>
      <view class="desc">
        <view class="text-content"> {{items.mec}}</view>
        <view class="text-gray text-sm text-right ">
          <van-icon name="fire"/>10
			<!-- <text class="cuIcon-attentionfill margin-lr-xs"></text>  -->
			<text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
			<text class="cuIcon-messagefill margin-lr-xs"></text> 30
		</view>
        <!-- <view>
          <view class="cu-tag bg-red light sm round">正义天使</view>
          <view class="cu-tag bg-green light sm round">史诗</view>
        </view> -->
      </view>
    </view>
  </view>
</view>


